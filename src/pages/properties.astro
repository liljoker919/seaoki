---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Our Properties | Sea OKI Collection">
    <Navigation />

    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 class="display-3 fw-bold brand-text">Our Properties</h1>
            <p class="lead">
                Choose from our two beautiful, pet-friendly vacation homes
            </p>
        </div>

        <div class="row g-5">
            <!-- Steps to the Sea -->
            <div class="col-lg-6">
                <div class="card h-100 shadow-lg border-0">
                    <img
                        src="https://placehold.co/800x600/bde0fe/ffffff?text=Steps+to+the+Sea"
                        class="card-img-top"
                        alt="Steps to the Sea exterior"
                        style="height: 300px; object-fit: cover;"
							loading="lazy"
							width="800"
							height="600"
                    />
                    <div class="card-body d-flex flex-column">
                        <h2 class="card-title h3 fw-bold brand-text">
                            Steps to the Sea
                        </h2>
                        <p class="card-text fs-5">
                            Our classic 3-bedroom, 2-bathroom beach house
                            located less than a 10-minute walk from the ocean.
                            Perfect for families, with an open living space and
                            a welcoming front porch.
                        </p>

                        <div
                            class="row text-center border-top border-bottom py-3 my-3"
                        >
                            <div class="col-3">
                                <div class="fw-bold fs-4">3</div>
                                <small>Bedrooms</small>
                            </div>
                            <div class="col-3">
                                <div class="fw-bold fs-4">2</div>
                                <small>Baths</small>
                            </div>
                            <div class="col-3">
                                <div class="fw-bold fs-4">8</div>
                                <small>Sleeps</small>
                            </div>
                            <div class="col-3">
                                <div class="fw-bold fs-4">üêæ</div>
                                <small>Pet Friendly</small>
                            </div>
                        </div>

                        <div class="mt-auto">
                            <a
                                href="/properties/steps-to-the-sea"
                                class="btn btn-outline-primary btn-lg me-2 mb-2"
                                >View Details</a
                            >
                            <a href="#" class="btn btn-brand btn-lg mb-2"
                                >Check Availability</a
                            >
                        </div>
                    </div>
                </div>
            </div>

            <!-- Down by the Sea -->
            <div class="col-lg-6">
                <div class="card h-100 shadow-lg border-0">
                    <img
                        src="https://placehold.co/800x600/ffafcc/ffffff?text=Down+by+the+Sea"
                        class="card-img-top"
                        alt="Down by the Sea exterior"
                        style="height: 300px; object-fit: cover;"
							loading="lazy"
							width="800"
							height="600"
                    />
                    <div class="card-body d-flex flex-column">
                        <h2 class="card-title h3 fw-bold brand-text">
                            Down by the Sea
                        </h2>
                        <p class="card-text fs-5">
                            A charming and cozy 3-bedroom, 2-bathroom home that
                            offers comfort and value. Situated a short golf cart
                            ride or drive from public beach access, it's your
                            affordable coastal retreat.
                        </p>

                        <div
                            class="row text-center border-top border-bottom py-3 my-3"
                        >
                            <div class="col-3">
                                <div class="fw-bold fs-4">3</div>
                                <small>Bedrooms</small>
                            </div>
                            <div class="col-3">
                                <div class="fw-bold fs-4">2</div>
                                <small>Baths</small>
                            </div>
                            <div class="col-3">
                                <div class="fw-bold fs-4">7</div>
                                <small>Sleeps</small>
                            </div>
                            <div class="col-3">
                                <div class="fw-bold fs-4">üêæ</div>
                                <small>Pet Friendly</small>
                            </div>
                        </div>

                        <div class="mt-auto">
                            <a
                                href="/properties/down-by-the-sea"
                                class="btn btn-outline-primary btn-lg me-2 mb-2"
                                >View Details</a
                            >
                            <a href="#" class="btn btn-brand btn-lg mb-2"
                                >Check Availability</a
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Comparison Section -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="bg-light rounded p-4">
                    <h3 class="text-center mb-4">Compare Our Properties</h3>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Feature</th>
                                    <th class="text-center">Steps to the Sea</th
                                    >
                                    <th class="text-center">Down by the Sea</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>Distance to Beach</strong></td>
                                    <td class="text-center">10-minute walk</td>
                                    <td class="text-center"
                                        >Short drive/golf cart ride</td
                                    >
                                </tr>
                                <tr>
                                    <td><strong>Sleeps</strong></td>
                                    <td class="text-center">8 guests</td>
                                    <td class="text-center">7 guests</td>
                                </tr>
                                <tr>
                                    <td><strong>Bedrooms</strong></td>
                                    <td class="text-center">3</td>
                                    <td class="text-center">3</td>
                                </tr>
                                <tr>
                                    <td><strong>Bathrooms</strong></td>
                                    <td class="text-center">2</td>
                                    <td class="text-center">2</td>
                                </tr>
                                <tr>
                                    <td><strong>Parking</strong></td>
                                    <td class="text-center"
                                        >Driveway + street</td
                                    >
                                    <td class="text-center"
                                        >Driveway + street</td
                                    >
                                </tr>
                                <tr>
                                    <td><strong>Pets Allowed</strong></td>
                                    <td class="text-center"
                                        >‚úÖ Yes (2 max, $50 fee)</td
                                    >
                                    <td class="text-center"
                                        >‚úÖ Yes (2 max, $50 fee)</td
                                    >
                                </tr>
                                <tr>
                                    <td><strong>WiFi</strong></td>
                                    <td class="text-center">‚úÖ High-speed</td>
                                    <td class="text-center">‚úÖ High-speed</td>
                                </tr>
                                <tr>
                                    <td><strong>Kitchen</strong></td>
                                    <td class="text-center"
                                        >‚úÖ Fully equipped</td
                                    >
                                    <td class="text-center"
                                        >‚úÖ Fully equipped</td
                                    >
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <Footer />
</Layout>
