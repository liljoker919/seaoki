---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Contact | Sea OKI Collection">
    <Navigation />

    <div class="container py-5">
        <!-- Page Header -->
        <div class="text-center mb-5">
            <h1 class="display-3 fw-bold brand-text">Contact Us</h1>
            <p class="lead">
                We're here to help plan your perfect Oak Island getaway
            </p>
        </div>

        <div class="row">
            <!-- Contact Information -->
            <div class="col-lg-6 mb-5">
                <h2 class="h4 fw-bold mb-4">Get in Touch</h2>
                <p class="fs-5 mb-4">
                    Have questions about our properties or Oak Island? We'd love
                    to help! As the owners, we're personally involved in every
                    aspect of your stay and can provide insider recommendations
                    to make your vacation unforgettable.
                </p>

                <div class="row g-4">
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <div class="brand-text fs-3 me-3">üìß</div>
                            <div>
                                <h5 class="mb-1">Email</h5>
                                <a
                                    href="mailto:info@seaokicollection.com"
                                    class="brand-text text-decoration-none"
                                    >info@seaokicollection.com</a
                                >
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <div class="brand-text fs-3 me-3">üìû</div>
                            <div>
                                <h5 class="mb-1">Phone</h5>
                                <a
                                    href="tel:+19105550123"
                                    class="brand-text text-decoration-none"
                                    >(910) 555-0123</a
                                >
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <div class="brand-text fs-3 me-3">üìç</div>
                            <div>
                                <h5 class="mb-1">Location</h5>
                                <p class="mb-0">Oak Island, NC</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <div class="brand-text fs-3 me-3">‚è∞</div>
                            <div>
                                <h5 class="mb-1">Response Time</h5>
                                <p class="mb-0">
                                    We typically respond within 2-4 hours during
                                    business hours
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Social Media -->
                <div class="mt-4">
                    <h5 class="fw-bold mb-3">Follow Us</h5>
                    <div class="d-flex gap-3">
                        <a
                            href="https://facebook.com/totheseaoki/"
                            target="_blank"
                            class="btn btn-outline-primary btn-sm"
                        >
                            <i class="fab fa-facebook me-2"></i>Facebook
                        </a>
                        <a
                            href="https://www.instagram.com/bytheseaoki/"
                            target="_blank"
                            class="btn btn-outline-primary btn-sm"
                        >
                            <i class="fab fa-instagram me-2"></i>Instagram
                        </a>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-lg-6">
                <div class="card shadow border-0">
                    <div class="card-header bg-brand text-white">
                        <h4 class="mb-0">Send us a Message</h4>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="firstName" class="form-label"
                                        >First Name *</label
                                    >
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="firstName"
                                        required
                                    />
                                </div>
                                <div class="col-md-6">
                                    <label for="lastName" class="form-label"
                                        >Last Name *</label
                                    >
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="lastName"
                                        required
                                    />
                                </div>
                                <div class="col-12">
                                    <label for="email" class="form-label"
                                        >Email *</label
                                    >
                                    <input
                                        type="email"
                                        class="form-control"
                                        id="email"
                                        required
                                    />
                                </div>
                                <div class="col-12">
                                    <label for="phone" class="form-label"
                                        >Phone</label
                                    >
                                    <input
                                        type="tel"
                                        class="form-control"
                                        id="phone"
                                    />
                                </div>
                                <div class="col-md-6">
                                    <label for="property" class="form-label"
                                        >Interested Property</label
                                    >
                                    <select class="form-select" id="property">
                                        <option value=""
                                            >Select a property</option
                                        >
                                        <option value="steps-to-the-sea"
                                            >Steps to the Sea</option
                                        >
                                        <option value="down-by-the-sea"
                                            >Down by the Sea</option
                                        >
                                        <option value="either"
                                            >Either Property</option
                                        >
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="guests" class="form-label"
                                        >Number of Guests</label
                                    >
                                    <select class="form-select" id="guests">
                                        <option value="">Select guests</option>
                                        <option value="1-2">1-2 guests</option>
                                        <option value="3-4">3-4 guests</option>
                                        <option value="5-6">5-6 guests</option>
                                        <option value="7-8">7-8 guests</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="checkin" class="form-label"
                                        >Check-in Date</label
                                    >
                                    <input
                                        type="date"
                                        class="form-control"
                                        id="checkin"
                                    />
                                </div>
                                <div class="col-md-6">
                                    <label for="checkout" class="form-label"
                                        >Check-out Date</label
                                    >
                                    <input
                                        type="date"
                                        class="form-control"
                                        id="checkout"
                                    />
                                </div>
                                <div class="col-12">
                                    <label for="message" class="form-label"
                                        >Message *</label
                                    >
                                    <textarea
                                        class="form-control"
                                        id="message"
                                        rows="4"
                                        placeholder="Tell us about your planned stay, any questions you have, or special requests..."
                                        required></textarea>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input
                                            class="form-check-input"
                                            type="checkbox"
                                            id="pets"
                                        />
                                        <label
                                            class="form-check-label"
                                            for="pets"
                                        >
                                            I will be traveling with pets
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button
                                        type="submit"
                                        class="btn btn-brand btn-lg w-100"
                                        >Send Message</button
                                    >
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Booking -->
        <div class="text-center mt-5">
            <div class="bg-light p-5 rounded">
                <h3 class="fw-bold mb-3">Ready to Book?</h3>
                <p class="fs-5 mb-4">
                    Skip the back-and-forth and check availability directly
                </p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="#" class="btn btn-brand btn-lg"
                        >Steps to the Sea - Check Availability</a
                    >
                    <a href="#" class="btn btn-outline-primary btn-lg"
                        >Down by the Sea - Check Availability</a
                    >
                </div>
            </div>
        </div>

        <!-- FAQ Section -->
        <div class="mt-5">
            <h3 class="fw-bold text-center mb-5">Frequently Asked Questions</h3>

            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <div class="accordion" id="faqAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button
                                    class="accordion-button collapsed"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#faq1"
                                >
                                    What's included with my stay?
                                </button>
                            </h2>
                            <div
                                id="faq1"
                                class="accordion-collapse collapse"
                                data-bs-parent="#faqAccordion"
                            >
                                <div class="accordion-body">
                                    Both properties include linens, towels,
                                    fully equipped kitchens, WiFi, beach chairs,
                                    umbrella, beach wagon, and outdoor grill. We
                                    also provide basic toiletries, paper
                                    products, and cleaning supplies.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button
                                    class="accordion-button collapsed"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#faq2"
                                >
                                    What's your pet policy?
                                </button>
                            </h2>
                            <div
                                id="faq2"
                                class="accordion-collapse collapse"
                                data-bs-parent="#faqAccordion"
                            >
                                <div class="accordion-body">
                                    We welcome up to 2 pets per property with a
                                    $50 pet fee. Both properties have fenced
                                    yards. Pets must be kept off furniture and
                                    owners are responsible for cleanup. Oak
                                    Island beaches allow leashed dogs
                                    year-round.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button
                                    class="accordion-button collapsed"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#faq3"
                                >
                                    How far are the properties from the beach?
                                </button>
                            </h2>
                            <div
                                id="faq3"
                                class="accordion-collapse collapse"
                                data-bs-parent="#faqAccordion"
                            >
                                <div class="accordion-body">
                                    "Steps to the Sea" is about a 10-minute walk
                                    to the beach. "Down by the Sea" is a short
                                    drive or golf cart ride (about 5 minutes) to
                                    public beach access. Both offer easy beach
                                    access with provided equipment.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button
                                    class="accordion-button collapsed"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#faq4"
                                >
                                    What's your cancellation policy?
                                </button>
                            </h2>
                            <div
                                id="faq4"
                                class="accordion-collapse collapse"
                                data-bs-parent="#faqAccordion"
                            >
                                <div class="accordion-body">
                                    We offer flexible cancellation up to 14 days
                                    before your stay for a full refund.
                                    Cancellations within 14 days may be eligible
                                    for partial refunds depending on our ability
                                    to rebook. We understand plans change and
                                    work with guests when possible.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button
                                    class="accordion-button collapsed"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#faq5"
                                >
                                    Do you provide local recommendations?
                                </button>
                            </h2>
                            <div
                                id="faq5"
                                class="accordion-collapse collapse"
                                data-bs-parent="#faqAccordion"
                            >
                                <div class="accordion-body">
                                    Absolutely! As locals, we love sharing our
                                    favorite restaurants, activities, and hidden
                                    gems. We provide a comprehensive local guide
                                    with every booking and are always available
                                    for personalized recommendations.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <Footer />
</Layout>
