---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
---

<Layout title="Steps to the Sea | Sea OKI Collection">
    <Navigation />

    <!-- Hero Section -->
    <section
        class="position-relative"
        style="height: 50vh; background-image: url('https://placehold.co/1920x800/bde0fe/ffffff?text=Steps+to+the+Sea+Hero'); background-size: cover; background-position: center;"
    >
        <div
            class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50"
        >
        </div>
        <div
