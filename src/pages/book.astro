---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Book Now | Sea OKI Collection">
    <Navigation />

    <div class="container py-5">
        <!-- Page Header -->
        <div class="text-center mb-5">
            <h1 class="display-3 fw-bold brand-text">Book Your Stay</h1>
            <p class="lead">Choose your perfect Oak Island vacation rental</p>
        </div>

        <!-- Booking Options -->
        <div class="row g-5 mb-5">
            <!-- Steps to the Sea -->
            <div class="col-lg-6">
                <div class="card h-100 shadow-lg border-0">
                    <img
                        src="https://placehold.co/600x300/bde0fe/ffffff?text=Steps+to+the+Sea"
                        class="card-img-top"
                        alt="Steps to the Sea"
                        style="height: 200px; object-fit: cover;"
						loading="lazy"
						width="600"
						height="300"
                    />
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title fw-bold brand-text">
                            Steps to the Sea
                        </h3>
                        <p class="card-text">
                            Perfect beachside location - just a 10-minute walk
                            to the ocean. Ideal for families who want easy beach
                            access.
                        </p>

                        <div class="row text-center bg-light rounded p-3 mb-3">
                            <div class="col-3">
                                <div class="fw-bold">3</div>
                                <small>Bedrooms</small>
                            </div>
                            <div class="col-3">
                                <div class="fw-bold">2</div>
                                <small>Baths</small>
                            </div>
                            <div class="col-3">
                                <div class="fw-bold">8</div>
                                <small>Sleeps</small>
                            </div>
                            <div class="col-3">
                                <div class="fw-bold">üêæ</div>
                                <small>Pet OK</small>
                            </div>
                        </div>

                        <div class="mt-auto">
                            <a
                                href="/properties/steps-to-the-sea"
                                class="btn btn-outline-primary mb-2 w-100"
                                >View Details</a
                            >
                            <a href="#" class="btn btn-brand btn-lg w-100"
                                >Check Availability & Book</a
                            >
                        </div>
                    </div>
                </div>
            </div>

            <!-- Down by the Sea -->
            <div class="col-lg-6">
                <div class="card h-100 shadow-lg border-0">
                    <img
                        src="https://placehold.co/600x300/ffafcc/ffffff?text=Down+by+the+Sea"
                        class="card-img-top"
                        alt="Down by the Sea"
                        style="height: 200px; object-fit: cover;"
						loading="lazy"
						width="600"
						height="300"
                    />
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title fw-bold brand-text">
                            Down by the Sea
                        </h3>
                        <p class="card-text">
                            Exceptional value and comfort. Short drive to beach
                            access, perfect for budget-conscious families.
                        </p>

                        <div class="row text-center bg-light rounded p-3 mb-3">
                            <div class="col-3">
                                <div class="fw-bold">3</div>
                                <small>Bedrooms</small>
                            </div>
                            <div class="col-3">
                                <div class="fw-bold">2</div>
                                <small>Baths</small>
                            </div>
                            <div class="col-3">
                                <div class="fw-bold">7</div>
                                <small>Sleeps</small>
                            </div>
                            <div class="col-3">
                                <div class="fw-bold">üêæ</div>
                                <small>Pet OK</small>
                            </div>
                        </div>

                        <div class="mt-auto">
                            <a
                                href="/properties/down-by-the-sea"
                                class="btn btn-outline-primary mb-2 w-100"
                                >View Details</a
                            >
                            <a href="#" class="btn btn-brand btn-lg w-100"
                                >Check Availability & Book</a
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Booking Benefits -->
        <div class="bg-light rounded p-5 mb-5">
            <h2 class="text-center fw-bold mb-4">Why Book Direct with Us?</h2>
            <div class="row g-4">
                <div class="col-md-4 text-center">
                    <div class="brand-text fs-2 mb-3">üí∞</div>
                    <h5 class="fw-bold">Best Price Guaranteed</h5>
                    <p class="mb-0">
                        No booking fees or service charges. Our direct rates are
                        always the lowest available.
                    </p>
                </div>
                <div class="col-md-4 text-center">
                    <div class="brand-text fs-2 mb-3">ü§ù</div>
                    <h5 class="fw-bold">Personal Service</h5>
                    <p class="mb-0">
                        Speak directly with the owners. Get local
                        recommendations and personalized attention.
                    </p>
                </div>
                <div class="col-md-4 text-center">
                    <div class="brand-text fs-2 mb-3">‚ú®</div>
                    <h5 class="fw-bold">Flexible Policies</h5>
                    <p class="mb-0">
                        More flexible cancellation and pet policies when you
                        book directly with us.
                    </p>
                </div>
            </div>
        </div>

        <!-- Booking Process -->
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="text-center fw-bold mb-5">How to Book</h2>

                <div class="row g-4">
                    <div class="col-md-3 text-center">
                        <div
                            class="bg-brand text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                            style="width: 60px; height: 60px;"
                        >
                            <span class="fs-4 fw-bold">1</span>
                        </div>
                        <h5 class="fw-bold">Check Availability</h5>
                        <p class="small">
                            Click the booking link for your preferred property
                            to see real-time availability.
                        </p>
                    </div>

                    <div class="col-md-3 text-center">
                        <div
                            class="bg-brand text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                            style="width: 60px; height: 60px;"
                        >
                            <span class="fs-4 fw-bold">2</span>
                        </div>
                        <h5 class="fw-bold">Select Dates</h5>
                        <p class="small">
                            Choose your check-in and check-out dates. See
                            instant pricing with no hidden fees.
                        </p>
                    </div>

                    <div class="col-md-3 text-center">
                        <div
                            class="bg-brand text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                            style="width: 60px; height: 60px;"
                        >
                            <span class="fs-4 fw-bold">3</span>
                        </div>
                        <h5 class="fw-bold">Book Securely</h5>
                        <p class="small">
                            Complete your reservation with our secure payment
                            system. Instant confirmation.
                        </p>
                    </div>

                    <div class="col-md-3 text-center">
                        <div
                            class="bg-brand text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                            style="width: 60px; height: 60px;"
                        >
                            <span class="fs-4 fw-bold">4</span>
                        </div>
                        <h5 class="fw-bold">Enjoy!</h5>
                        <p class="small">
                            Receive your welcome guide and local
                            recommendations. Your Oak Island adventure awaits!
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Option -->
        <div class="text-center">
            <div class="border border-3 border-primary rounded p-5">
                <h3 class="fw-bold mb-3">Have Questions Before Booking?</h3>
                <p class="fs-5 mb-4">
                    We're here to help you choose the perfect property and plan
                    your stay.
                </p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="/contact" class="btn btn-outline-primary btn-lg"
                        >Contact Us First</a
                    >
                    <a
                        href="mailto:info@seaokicollection.com"
                        class="btn btn-outline-primary btn-lg"
                    >
                        <i class="fas fa-envelope me-2"></i>Email Us
                    </a>
                    <a
                        href="tel:+19105550123"
                        class="btn btn-outline-primary btn-lg"
                    >
                        <i class="fas fa-phone me-2"></i>Call Us
                    </a>
                </div>
            </div>
        </div>
    </div>

    <Footer />
</Layout>
