---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="About | Sea OKI Collection">
	<Navigation />

	<div class="container py-5">
		<div class="text-center mb-5">
			<h1 class="display-3 fw-bold brand-text">
				About the Sea OKI Collection
			</h1>
			<p class="lead">
				Your family-owned gateway to Oak Island adventures
			</p>
		</div>

		<div class="row mb-5">
			<div class="col-lg-8 mx-auto">
				<h2 class="h3 fw-bold mb-4">Our Story</h2>
				<p class="fs-5 mb-4">
					Welcome to the Sea OKI Collection! We're a family-owned
					business passionate about providing memorable Oak Island
					experiences.
				</p>
			</div>
		</div>
	</div>

	<Footer />
</Layout>
