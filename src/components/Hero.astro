---
export interface Props {
    title?: string;
    subtitle?: string;
    buttonText?: string;
    buttonHref?: string;
    backgroundImage?: string;
    height?: string;
}

const {
    title = "Your Oak Island Getaway Awaits",
    subtitle = "Two charming, pet-friendly homes perfect for family vacations, just moments from the shore.",
    buttonText = "View Our Homes",
    buttonHref = "#properties",
    backgroundImage = "https://placehold.co/1920x1080/a0c4ff/ffffff?text=Beautiful+Beach+Path",
    height = "70vh",
} = Astro.props;
---

<section
    class="position-relative"
    style={`height: ${height}; background-image: url('${backgroundImage}'); background-size: cover; background-position: center;`}
>
    <div class="position-absolute top-0 start-0 w-100 h-100 hero-gradient">
    </div>
    <div
        class="position-relative h-100 d-flex flex-column justify-content-center align-items-center text-center text-white p-3"
    >
        <h1 class="display-1 fw-bold mb-4">{title}</h1>
        <p class="fs-5 mx-auto mb-4" style="max-width: 600px;">{subtitle}</p>
        <a href={buttonHref} class="btn btn-light btn-lg brand-text fw-bold"
            >{buttonText}</a
        >
    </div>
</section>
