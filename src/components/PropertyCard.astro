---
export interface Props {
    image: string;
    title: string;
    description: string;
    bedrooms: number;
    baths: number;
    sleeps: number;
    bookingLink: string;
    detailsLink?: string;
    petFriendly?: boolean;
}

const {
    image,
    title,
    description,
    bedrooms,
    baths,
    sleeps,
    bookingLink,
    detailsLink,
    petFriendly = true,
} = Astro.props;
---

<div class="col-lg-6">
    <div class="card h-100 shadow-lg border-0">
        <img
            src={image}
            class="card-img-top"
            alt={`Exterior of ${title}`}
            style="height: 250px; object-fit: cover;"
        />
        <div class="card-body d-flex flex-column">
            <h3 class="card-title h4 fw-bold">{title}</h3>
            <p class="card-text">{description}</p>

            <div class="row text-center border-top border-bottom py-3 my-3">
                <div class="col-3">
                    <div class="fw-bold fs-4">{bedrooms}</div>
                    <small>Bedrooms</small>
                </div>
                <div class="col-3">
                    <div class="fw-bold fs-4">{baths}</div>
                    <small>Baths</small>
                </div>
                <div class="col-3">
                    <div class="fw-bold fs-4">{sleeps}</div>
                    <small>Sleeps</small>
                </div>
                <div class="col-3">
                    <div class="fw-bold fs-4">{petFriendly ? "🐾" : "❌"}</div>
                    <small>Pet Friendly</small>
                </div>
            </div>

            <div class="mt-auto">
                {
                    detailsLink && (
                        <a
                            href={detailsLink}
                            class="btn btn-outline-primary mb-2 w-100"
                        >
                            View Details
                        </a>
                    )
                }
                <a href={bookingLink} class="btn btn-brand btn-lg w-100"
                    >Check Availability</a
                >
            </div>
        </div>
    </div>
</div>
